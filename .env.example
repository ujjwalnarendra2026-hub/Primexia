# Public app URL
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Supabase (server-side admin client)
SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"

# Supabase (public client values, used for edge function trigger)
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"

# Admin authentication
ADMIN_DASHBOARD_PASSWORD="SET_A_STRONG_ADMIN_PASSWORD"
ADMIN_SESSION_SECRET="SET_A_LONG_RANDOM_SECRET_MIN_32_CHARS"

# Contact notifications / admin recipient
ADMIN_EMAIL="admin@example.com"
GMAIL_USER="your-gmail-address@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# Optional hardening (fallback exists in code if omitted)
CSRF_SECRET="SET_A_RANDOM_CSRF_SECRET"

# Local dev TLS behavior for Supabase calls:
# - non-production defaults to insecure TLS ON unless you set this to "false"
# - production is always strict TLS
ALLOW_INSECURE_SUPABASE_TLS="true"

# Optional: used by Supabase edge function implementation
ADMIN_PASSWORD="SET_IF_USING_SUPABASE_ADMIN_SUBMISSIONS_FUNCTION"
